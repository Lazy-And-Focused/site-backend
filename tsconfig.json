{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./**/*.ts" ],
  "exclude": [ "node_modules", "dist" ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
